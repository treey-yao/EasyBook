/**index.wxss**/


/* banner */

.banner-box {
    display: block;
    margin: 0 1rem 1rem;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 1px 0px 5px #999;
}

.slide-image {
    width: 100%;
    height: 100%;
}


/* 新品推荐 */

.new-book-wrap {
    margin: 0 1rem 1rem;
    padding-bottom: 1rem;
    display: -webkit-flex;
    /* Safari */
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    border-bottom: 1px solid #EFEFF4;
}


/* 搜索框 */

.search-wrap {
    margin: .5rem 0rem 1rem;
    padding: 0 1rem;
    display: block;
    background: #fff;
}

.search-box {
    display: block;
    padding: .2rem .5rem;
    background: #EFEFF4;
    color: #999;
    height: .7rem;
    line-height: 1rem;
    font-size: .7rem;
    min-height: .5rem;
    border-radius: .5rem;
}

.search-panel-wrap {
    position: fixed;
    top: 2rem;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
}

.history-box {
    margin-top: .5rem;
    padding: 0rem 1rem 1rem;
}

.history-title {
    font-size: .7rem;
    color: #999;
}

.dete-btn {
    width: .8rem;
    float: right;
    margin-top: .3rem;
}

.history-text-wrap {
    padding: 0rem 1rem 1rem;
}

.history-item {
    padding: .2rem .5rem;
    font-size: .8rem;
    border: 1px solid #EFEFF4;
    border-radius: .1rem;
    margin-right: .5rem;
    background: #fefefe;
}