@import "../../utils/iconfont.wxss";
.book-text-wrap {
    position: relative;
    width: 100%;
    height: 100%
}

.book-content-box {
    padding: .7rem 1rem;
    background: #f9f9f9
}


/*导航 */

.nav-box {
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: baseline;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    background: #fff;
    border-radius: .15rem;
}

.nav-item {
    width: 100%;
    font-size: .7rem;
    margin: .5rem 0;
    text-align: center;
    border-right: 1px solid #ccc;
}

.nav-item:last-child {
    border: none;
}

.icon-img {
    width: .5rem;
    margin-right: .5rem;
    margin-left: .5rem;
}

.icon-menu-img {
    width: 1rem;
    margin-right: .5rem;
}


/* 书本内容 */

.book-text {
    font-size: .8rem;
    display: block;
    text-indent: 2em;
    line-height: 1.5rem;
}


/* 设置btn */

.menu-btn {
    display: block;
    position: fixed;
    top: 0;
    left: 30%;
    width: 40%;
    height: 90%;
    opacity: 0;
    z-index: 100;
}


/* 设置 */

.set-up-box {
    display: block;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    z-index: 110;
}

.menu-nav-box {
    display: -webkit-box;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: baseline;
    justify-content: space-between;
}

.menu-nav-item {
    padding: .5rem 0;
    text-align: center;
    width: 100%;
    color: #808080;
}

.nav-icon {
    display: block;
    font-size: .85rem;
}

.nav-text {
    display: block;
    font-size: .7rem;
}


/* 字体滑块 */

.slider-box {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: #fff;
}

.slider-nav-box {
    display: -webkit-box;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    padding: 0 .8rem;
}

.slider-icon {
    line-height: normal;
    font-size: 1rem;
    display: inline-block;
    color: #808080;
}

.slider-text {
    width: 100%;
}


/* 目录 */

.catalog-wrap {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0px;
    display: block;
    box-shadow: -1px 1px 10px #999;
    z-index: 210;
}

.catalog-mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0px;
    background: #333;
    opacity: .8;
    z-index: 220;
}

.catalog-list-box {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 80%;
    height: 100%;
    background: #fff;
    z-index: 230;
}

.book-info-box {
    padding: .5rem 1rem;
    background: #d4237a;
    display: -webkit-flex;
    display: flex;
    justify-content: flex-start;
    flex-wrap: nowrap;
    flex-direction: row;
}

.book-img {
    width: 2.5rem;
    margin-right: .5rem;
}

.book-name {
    font-size: .7rem;
    color: #fff;
    padding: .1rem 0;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
}

.catalog-list-wrap {
    margin: .5rem 0;
    padding: 0 .5rem;
}

.chapter-item {
    display: block;
    padding: .2rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: .7rem;
}

.list-box {
    height: 100%;
    overflow: auto;
}