/**index.wxss**/

.head-wrap {
    display: -webkit-flex;
    display: flex;
    padding: .5rem;
    justify-content: center;
    flex-direction: column;
    background: #d4237a;
}

.head-img-box {
    width: 4rem;
    height: 4rem;
    display: inline-block;
    margin: 0 auto;
    border-radius: 50%;
    border: 2px solid #fff;
    overflow: hidden;
}

.head-name-box {
    display: inline-block;
    margin: 0 auto;
    font-size: .8rem;
    font-weight: 600;
    color: #fff;
    padding: .5rem 0 0 0;
}


/* 阅读记录*/

.read-wrap {
    margin-top: .5rem;
}

.read-title-box {
    padding: .2rem .5rem;
}

.read-title-box>text {
    font-size: .7rem;
    color: #999;
}

.read-list-group {
    display: block;
}

.read-book-item::after {
    content: "";
    clear: both;
    display: block;
}

.read-book-item {
    display: block;
    position: relative;
    margin-bottom: .5rem;
}

.cell-item-view {
    display: -webkit-flex;
    display: flex;
    align-items: stretch;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    padding: 0 0 0 .5rem;
}

.book-cover {
    width: 3rem;
    margin-right: .5rem;
    border-radius: .1rem;
}

.book-info-wrap {
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    text-align: left;
}

.book-name {
    font-size: .8rem;
    font-weight: 600;
    display: block;
    margin-bottom: .3rem;
}

.book-chapter {
    font-size: .7rem;
    display: block;
    color: #999;
}

.book-btn-wrap {
    width: 1.5rem;
    float: right;
    height: 4rem;
    background: #d4237a;
    color: #fff;
    width: 4rem;
}

.book-btn-item {
    display: block;
    text-align: center;
    font-size: .7rem;
    height: 4rem;
    line-height: 4rem;
}